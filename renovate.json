{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prConcurrentLimit": 0,
  "reviewers": [
    "chik4ge"
  ],
  "assignees": [
    "chik4ge"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "apps/.+\\.yaml$"
      ],
      "matchStrings": [
        "image:\\s*(?<depName>[^:]+):(?<currentValue>.+)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": [
        ".*\\.yaml$"
      ],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/(?<depName>[^/]+/[^/]+)/refs/tags/(?<currentValue>[^/]+)/"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [
        "templates/storage/democratic-csi\\.yaml$"
      ],
      "matchStrings": [
        "registry:\\s*(?<depName>docker\\.io/democraticcsi/democratic-csi)",
        "tag:\\s*(?<currentValue>.+)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "argocd": {
    "managerFilePatterns": [
      "/templates/.+\\.yaml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/apps/.+\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "loki"
      ],
      "fetchChangeLogs": "off",
      "prBodyNotes": [
        "helm chart changelogs: https://redirect.github.com/grafana/loki/blob/main/production/helm/loki/CHANGELOG.md#{{{replace '\\.' '' newVersion}}}",
        "loki changelogs: https://redirect.github.com/grafana/loki/blob/main/CHANGELOG.md"
      ]
    },
    {
      "matchPackageNames": [
        "grafana"
      ],
      "prBodyNotes": [
        "grafana changelogs: https://redirect.github.com/grafana/grafana/blob/main/CHANGELOG.md"
      ]
    },
    {
      "matchPackageNames": [
        "mimir"
      ],
      "fetchChangeLogs": "off",
      "prBodyNotes": [
        "helm chart changelogs: https://github.com/grafana/mimir/blob/main/operations/helm/charts/mimir-distributed/CHANGELOG.md#{{{replace '\\.' '' newVersion}}}",
        "mimir changelogs: https://redirect.github.com/grafana/mimir/blob/main/CHANGELOG.md"
      ]
    },
    {
      "matchPackageNames": [
        "alloy"
      ],
      "fetchChangeLogs": "off",
      "prBodyNotes": [
        "helm chart changelogs: https://github.com/grafana/alloy/blob/main/operations/helm/charts/alloy/CHANGELOG.md",
        "alloy changelogs: https://redirect.github.com/grafana/alloy/blob/main/CHANGELOG.md"
      ]
    },
    {
      "matchPackageNames": [
        "tailscale-operator"
      ],
      "fetchChangeLogs": "off",
      "prBodyNotes": [
        "changelogs: https://tailscale.com/changelog#service"
      ]
    }
  ]
}
